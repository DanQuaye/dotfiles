#!/bin/bash

# Guy John <http://rumblesan.com>
# guy@rumblesan.com
#
# This is for any osx specific bash settings

# ----------------------------------------------------------------------
# ENVIRONMENT CONFIGURATION
# ----------------------------------------------------------------------

# ignore OSX folder setting files
FIGNORE="$FIGNORE:DS_Store"

# ----------------------------------------------------------------------
# PATH
# ----------------------------------------------------------------------

# Add osx scripts to path
PATH=$DOTFILES/bin.osx:$PATH

# Add npm bin dir to path
PATH=$PATH:/usr/local/share/npm/bin

# Add cabal bin dir to path
PATH=$PATH:~/.cabal/bin

# Add ruby gem bin dir to path
PATH=$PATH:/usr/local/Cellar/ruby/1.9.3-p362/bin

# ----------------------------------------------------------------------
# ALIASES
# ----------------------------------------------------------------------

# Source the OSX specific aliases
source "$DOTFILES/aliases.osx"


# ----------------------------------------------------------------------
# BASH COMPLETION
# ----------------------------------------------------------------------

# Add the files for the installed bash_completion
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi

# ----------------------------------------------------------------------
# POWERLINE
# ----------------------------------------------------------------------

POWERLINESH=$(brew --prefix)/lib/python2.7/site-packages/powerline/bindings/bash/powerline.sh

if [ -f $POWERLINESH ]; then
    . $POWERLINESH
fi

