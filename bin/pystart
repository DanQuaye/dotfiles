#!/bin/bash

# This creates a basic python starting script

FILENAME=$1

case $FILENAME in
    *.py)
        ;;
    *)
        FILENAME="${FILENAME}.py"
        ;;
esac

echo "Creating python script ${FILENAME}"

cat <<EOF > "$FILENAME"
#!/usr/bin/env python


def main():
    pass


if __name__ == '__main__':
    main()
EOF

chmod +x "$FILENAME"
exec $EDITOR "$FILENAME"

