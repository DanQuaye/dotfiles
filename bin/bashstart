#!/bin/bash

# This creates a basic bash starting script

FILENAME=$1

case $FILENAME in
    *.py)
        ;;
    *)
        FILENAME="${FILENAME}"
        ;;
esac

echo "Creating bash script ${FILENAME}"

cat <<EOF > "$FILENAME"
#!/usr/bin/env bash

# exit when script tries to use an undeclared variable
set -o nounset

die() {
    echo "\$*"
    exit 1
}


main () {
}

main "\$@"

EOF

chmod +x "$FILENAME"
exec $EDITOR "$FILENAME"

