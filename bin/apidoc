#!/bin/bash

case $1 in
    scala)
        # The scala API docs
        exec open http://www.scala-lang.org/api/current/index.html
        ;;
    play)
        # Play framework docs
        # Need to keep updated with most recent version number :(
        exec open http://www.playframework.org/documentation/api/2.1.0/scala/index.html
        ;;
    grammar)
        # Fix your grammar
        exec open http://www.bristol.ac.uk/arts/exercises/grammar/grammar_tutorial/index.htm
        ;;
    tube)
        # A London Tubemap
        exec open http://www.tfl.gov.uk/assets/downloads/standard-tube-map.pdf
        ;;
    squeryl)
        # The squeryl API docs
        exec open http://squeryl.org/api/index.html
        ;;
    ruby)
        # The Ruby API docs
        exec open http://ruby-doc.org/core-1.9.3/
        ;;
    slick)
        # The Slick API docs
        exec open http://slick.typesafe.com/doc/1.0.1/api/
        ;;
    *)
        echo "Whatcho talking bout Willis!"
        ;;
esac

