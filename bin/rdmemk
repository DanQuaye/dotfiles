#!/bin/bash

die()
{
    echo "$*"
    exit 1
}

FILENAME="README.md"

if [ -f $FILENAME ]; then
    die "${FILENAME} already exists"
fi

echo "Creating README.md file"


echo -n "Title: "
read TITLE
if [ -z "$TITLE" ]; then
    die "Need to give a title"
fi


echo -n "Short description: "
read SHRTDESC


echo -n "Long description: "
read LONGDESC


echo -n "Contact Email: "
read EMAIL
if [ -z "$EMAIL" ]; then
    EMAIL="guy@rumblesan.com"
fi

licensemk

if [ $? != 0 ]; then
    die "Couldn't make LICENSE file"
fi

cat <<EOF > "$FILENAME"
# $TITLE

$SHRTDESC


## Description

$LONGDESC


## Contact

Drop me an email at $EMAIL


## License

BSD License.

EOF


